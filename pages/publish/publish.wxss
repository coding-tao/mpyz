@import "../../common/common.wxss";

.publish_list {
    background-color: #f5f5f5;
}

.publish_item {
    width: 358rpx;
    height: 400rpx;
    margin: 12rpx 10rpx 12rpx 12rpx;
    position: relative;
}

.publish_item:nth-child(2n-1) {
    margin-right: 0;
}

.publish_item image {
    width: 100%;
    height: 100%;
}

.publish_item .title {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    background: rgba(0, 0, 0, 0.5);
    font-size: 24rpx;
    color: #fff;

}

.title view {
    margin-left: 16rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}